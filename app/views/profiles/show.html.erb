<div class="col-12 mx-auto col-md-8 align-items-center">
  <div class="card">
    <!-- Card header -->
    <div class="card-header">
      <h3 class="mb-0">プロフィール</h3>
    </div>
    <!-- Card body -->
    <div class="card-body">
      <div class="d-flex align-items-center">
        <div>     
          <!-- Profile -->
          <div class="mb-3">
            <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
          </div>
          <div class="mb-3">
            <h4 class="mb-1">Name</h4>
            <%= @user.name %>
          </div>
          <div class="mb-3">
            <h4 class="mb-1">Hobby</h4>
            <%= @user.hobby %>
          </div>
          <div class="mb-3">
            <h4 class="mb-1">Profile</h4>
            <%= @user.profile %>
          </div>
          <% unless current_user == @user %>
            <div class="form-group">
              <% if current_user.following?(@user) %>
                <%= render 'relationships/unfollow_button', user: @user %>
              <% else %>
                <%= render 'relationships/follow_button', user: @user %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>